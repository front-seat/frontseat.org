---
interface Props {
  class?: string;
  title?: string;
}

const DEFAULT_TITLE = "Front Seat - building tech for good.";

const props = Astro.props;
const title = props.title ?? DEFAULT_TITLE;
const className = props.class;
---

<html lang="en">
  <head>
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-FBYND04F8T"></script>
    <script>
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        // @ts-ignore
        dataLayer.push(arguments);
      }
      // @ts-ignore
      gtag("js", new Date());
      // @ts-ignore
      gtag("config", "G-FBYND04F8T");
    </script>
    <meta
      name="description"
      content="Front Seat is a small team of designers and developers that are building tech for good prototypes in public."
    />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin="true"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@400;500;700;900&family=Work+Sans:wght@400;600;800&display=swap"
      rel="stylesheet"
    /> -->
    <meta charset="utf-8" />
    <link rel="icon" href="/images/front-seat-logo-square.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class:list={[className]}> <slot /></body>
</html>
<style is:global>
  @font-face {
    font-family: "Switzer";
    src:
      url("/fonts/Switzer-Semibold.woff2") format("woff2"),
      url("/fonts/Switzer-Semibold.woff") format("woff"),
      url("/fonts/Switzer-Semibold.ttf") format("truetype");
    font-weight: 600;
    font-display: auto;
    font-style: normal;
  }

  @font-face {
    font-family: "Switzer";
    src:
      url("/fonts/Switzer-Regular.woff2") format("woff2"),
      url("/fonts/Switzer-Regular.woff") format("woff"),
      url("/fonts/Switzer-Regular.ttf") format("truetype");
    font-weight: 400;
    font-display: auto;
    font-style: normal;
  }

  @font-face {
    font-family: "Plein";
    src:
      url("/fonts/Plein-Bold.woff2") format("woff2"),
      url("/fonts/Plein-Bold.woff") format("woff"),
      url("/fonts/Plein-Bold.ttf") format("truetype");
    font-weight: 700;
    font-display: auto;
    font-style: normal;
  }
</style>
